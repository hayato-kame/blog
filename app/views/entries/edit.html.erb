<% @page_title = "ブログの編集" %>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @entry, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_area :title, class: 'form-control', rows: 1 %>
      </div>
      
      <div class="form-group">
        <%= f.label :body, '本文' %>
        <%= f.text_area :body, class: 'form-control',  rows: 15 %>
        
        <%= f.submit 'Update', class: 'btn btn-primary btn-block' %>
      </div>
    
    <% end %>
    
  </div>
</div>
<% @page_title = "マイアカウント" %>

<h1><%= @page_title %></h1>

<ul class="toolbar">
  <%= link_to "アカウント情報の編集", :edit_account %> | 
  <%= link_to "パスワードの変更", :edit_password %>
</ul>


<table class="table table-striped">
  
  <tr>
    <th>Profile Image</th>
   
    <td class="media"><img class="mr-2 rounded" src="<%= gravatar_url(@user, { size: 50 }) %>" alt=""></td>
    
  </tr>
  
  
  <tr>
    <th width="150">id</th>
    <td><%= @user.id %></td>
  </tr>

  <tr>
    <th>Name</th>
    <td><%= @user.name %></td>
  </tr>

  <tr>
    <th>Mail Address</th>
    <td><%= @user.email %></td>
  </tr>

</table>
